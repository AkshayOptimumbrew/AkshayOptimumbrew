<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AskaQuestion" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E4C759</item>
        <item name="colorPrimaryVariant">#194258</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Edittext_Style" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="Textview_Style" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="fontFamily">@font/sf_atarian_system_extended</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="RatingBar2" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/gold</item>
        <item name="colorControlNormal">#6A6A6A</item>
    </style>

    <style name="selectableItemBackgroundBorderlessBlack">
        <item name="android:theme">@style/SelectableItemThemeBlack</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="selectableItemBackgroundBlack">
        <item name="android:theme">@style/SelectableItemThemeBlack</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemThemeBlack">
        <item name="colorControlHighlight">@color/black_10_per</item>
    </style>


    <style name="selectableItemBackgroundBorderlessWhite"> <!-- white round -->
        <item name="android:theme">@style/SelectableItemThemeWhite</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="obCSSelectableItemBackgroundBorderless">
        <item name="android:theme">@style/SelectableItemThemeWhite</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="selectableItemBackgroundWhite"> <!-- white square -->
        <item name="android:theme">@style/SelectableItemThemeWhite</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemThemeWhite">
        <item name="colorControlHighlight">@color/white_10_per</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/gold</item>
        <item name="fontFamily">@font/sf_atarian_system_extended_bold</item>
    </style>

    <style name="toastTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_atarian_system_extended_bold</item>
    </style>
</resources>